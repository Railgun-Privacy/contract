{
  "name": "railgun-contracts",
  "version": "0.0.1",
  "description": "Railgun Contract",
  "license": "UNLICENSED",
  "scripts": {
    "lint": "cspell --no-progress '**'; solhint 'contracts/**/*.sol'; prettier --check './**'; eslint .",
    "lint:fix": "cspell --no-progress '**'; npx prettier --write './**'; npx solhint --fix 'contracts/**/*.sol'",
    "clean": "hardhat clean",
    "compile": "npm run clean && npm run lint && hardhat compile",
    "test": "hardhat test",
    "test:extra": "hardhat test --longtests extra",
    "test:complete": "hardhat test --longtests complete",
    "analyze": "npm run clean; hardhat compile; npm run lint; ./slither.sh"
  },
  "devDependencies": {
    "@ethereum-artifacts/weth9": "^1.1.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@noble/ed25519": "^1.7.1",
    "@noble/hashes": "^1.1.5",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@railgun-community/deployments": "^0.4.3",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "chai": "^4.3.7",
    "circomlibjs": "^0.1.7",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^39.6.8",
    "eslint-plugin-tsdoc": "^0.2.17",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-local-networks-config-plugin": "^0.0.6",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "railgun-artifacts-node": "https://npm.railgun.org/railgun-artifacts-node-0.1.0.tgz",
    "snarkjs": "^0.5.0",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@arbitrum/nitro-contracts": "1.0.0-beta.8",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.1"
  }
}
